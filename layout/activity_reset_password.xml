<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.ResetPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colorPrimary"
        android:id="@+id/rel1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/page_title"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/whitec"
            android:textAlignment="center"
            android:text="Reset Your Password"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/title_ques"
        android:layout_below="@id/find_phone_number"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:text="Answer the following security Questions"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/find_phone_number"
        android:padding="10sp"
        android:inputType="number"
        android:maxLength="10"
        android:textSize="20dp"
        android:layout_below="@id/rel1"
        android:layout_margin="15dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimary"
        android:hint="Please Write Your Phone Number"
        android:background="@drawable/input_design"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ques_1"
        android:padding="10sp"
        android:layout_below="@id/title_ques"
        android:layout_margin="15dp"
        android:textSize="22dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimary"
        android:hint="Which was your first School.......??"
        android:background="@drawable/input_design"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ques_2"
        android:padding="10sp"
        android:textSize="25dp"
        android:layout_below="@id/ques_1"
        android:layout_margin="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"
        android:hint="Whats your favourite car.....??"
        android:background="@drawable/input_design"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/verify_ques_btn"
        android:padding="10sp"
        android:textSize="20dp"
        android:layout_below="@id/ques_2"
        android:layout_margin="15dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/whitec"
        android:text="Verify"
        android:background="@drawable/buttons"
        />

</RelativeLayout>