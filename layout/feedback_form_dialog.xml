<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="30dp"
       android:id="@+id/feedback_heading"
       android:textStyle="bold"
       android:textColor="@color/colorPrimary"
       android:textAlignment="center"
       android:text="User Feedback Form"/>

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="13dp"
        android:layout_gravity="center_horizontal"
        android:padding="5sp"
        android:id="@+id/feedback_tv"
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:text="Your Feedback Matters A Lot To Us"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Describe Your Feedback / Report a bug"
        android:background="@drawable/input_design"
        android:textSize="20dp"
        android:padding="8sp"
        android:minLines="3"
        android:maxLines="6"
        android:id="@+id/feedback_text"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"/>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="submit"
    android:background="@drawable/buttons"
    android:textSize="20dp"
    android:id="@+id/feedback_submit"
    android:layout_marginTop="40dp"
    android:textColor="@android:color/white"
    android:layout_marginStart="30sp"
    android:layout_marginEnd="30sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:id="@+id/feedback_cancel"
        android:background="@drawable/buttons2"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"/>
</LinearLayout>