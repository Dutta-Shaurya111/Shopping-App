<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitec"
    android:orientation="vertical"
    tools:context=".LoginSignup.Register">

    <ImageView
        android:id="@+id/register_app_logo"
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="40sp"
        android:src="@drawable/applogo" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="80sp"
        android:background="@drawable/input_design"
        android:hint="User Name:"
        android:inputType="text"
        android:padding="15sp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/register_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:background="@drawable/input_design"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="15sp"
        android:maxLength="10"
        android:hint="Enter Phone-Number:"
        android:inputType="number"
        android:padding="15sp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="@drawable/input_design"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="15sp"
        android:hint="Enter Password: min. 8 characters"
        android:inputType="textPassword"
        android:padding="15sp"
        app:passwordToggleEnabled="true"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/invite_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/buttons2"
        android:hint="Enter Invite Code:"
        android:inputType="text"
        android:visibility="gone"
        android:padding="15sp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="18sp" />

    <Button
        android:id="@+id/register_check_invite_code"
        android:layout_width="140sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:visibility="gone"
        android:background="@drawable/buttons"
        android:padding="6sp"
        android:layout_marginEnd="30sp"
        android:text="Apply Code"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
    <CheckBox
        android:id="@+id/register_checkbox"
        style="@style/Material.Drawable.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_marginStart="20dp"
        android:text="Remember Me"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:cbd_strokeColor="@color/colorPrimary" />
        <CheckBox
            android:id="@+id/password_checkbox"
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="150sp"
            android:layout_height="20sp"
            android:layout_marginLeft="20sp"
            android:text="Show Password"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:cbd_strokeColor="@color/colorPrimary" />

    </LinearLayout>
    <Button
        android:id="@+id/register_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        android:padding="15sp"
        android:text="Create Account"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/have_invite"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:layout_marginLeft="170sp"
        android:layout_marginTop="30sp"
        android:text="Have Invite Code?"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alreadydone"
        android:layout_width="wrap_content"
        android:layout_height="32sp"
        android:layout_marginLeft="170sp"
        android:layout_marginTop="20sp"
        android:text="Already Registered?"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/buttons"
        android:padding="10sp"
        android:text="Login "
        android:layout_marginBottom="30sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</LinearLayout></ScrollView>