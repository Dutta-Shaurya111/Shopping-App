<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="22dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="7dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:id="@+id/categories_product_like"
            android:layout_marginStart="10dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/heart_vector"/>

        <TextView
            android:id="@+id/categories_product_discount"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="127dp"
            android:layout_marginRight="5dp"
            android:background="@color/blue_bright"
            android:text="OFF"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/categories_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_below="@id/categories_product_price"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginBottom="8sp"
            android:textStyle="italic"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/categories_product_image"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            android:layout_width="200dp"
            android:layout_below="@id/categories_product_discount"
            android:layout_centerHorizontal="true"
            android:layout_height="170dp"
            android:layout_marginTop="2dp"/>


        <TextView
            android:id="@+id/categories_product_price"
            android:layout_width="75sp"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:background="@color/blue_dark"
            android:layout_marginStart="7sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/categories_product_image"
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:padding="5sp"
            android:textStyle="normal"
            android:textColor="@color/whitec"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:id="@+id/categories_product_mrp"
            android:text="Mrp"
            android:padding="5sp"
            android:layout_below="@id/categories_product_image"
            android:layout_marginLeft="10sp"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/categories_product_price"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>