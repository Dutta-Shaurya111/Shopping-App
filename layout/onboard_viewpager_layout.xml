<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_marginTop="50sp"
        android:src="@drawable/imag1"
        android:id="@+id/onboard_image"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEADING"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/onboard_heading"
        android:layout_marginTop="30sp"
        android:textStyle="italic"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/onboard_description"
        android:text="Lorem ipsumsample text Lorem ipsumsample text
        Lorem ipsumsample text Lorem ipsumsample text Lorem ipsumsample text
        Lorem ipsumsample text Lorem ipsumsample text
        Lorem ipsumsample text"
        android:textColor="@android:color/white"
        android:padding="15dp"/>


</LinearLayout>