<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:layout_margin="10sp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:id="@+id/order_user_name"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_marginLeft="5sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginTop="20dp"
            android:layout_below="@id/order_user_name"
            android:id="@+id/order_phone_number"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginRight="5sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:layout_marginTop="20sp"
            android:layout_below="@id/order_phone_number"
            android:id="@+id/order_total_price"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Address,City"
            android:layout_marginTop="20sp"
            android:layout_below="@id/order_total_price"
            android:id="@+id/order_address_city"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Date,Time"
            android:layout_marginTop="20sp"
            android:layout_below="@id/order_address_city"
            android:id="@+id/order_date_time"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shipping State"
            android:layout_marginTop="20sp"
            android:layout_below="@id/order_date_time"
            android:id="@+id/order_shipping_state"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show this Order's Products"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/show_all_orders"
            android:background="@color/whitec"
            android:textSize="17dp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/order_shipping_state"/>

    </RelativeLayout>


</RelativeLayout>