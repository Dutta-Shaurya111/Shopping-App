<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginEnd="10sp"
    android:layout_marginStart="10sp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginEnd="20dp"
        android:text="FAQS"
        android:id="@+id/faqs_heading"
        android:layout_marginTop="15sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="5sp"
        android:id="@+id/faqs_linear1"
        android:layout_below="@id/faqs_heading"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_referral"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/buttondesign"
            android:text="Referrals"/>

        <Button
            android:layout_width="match_parent"
            android:background="@drawable/buttondesign"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_return"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:text="Return Policy"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_refund"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@drawable/buttondesign"
            android:text="Refunds"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/faqs_recycler"
        android:layout_marginTop="12sp"
        android:layout_below="@+id/faqs_linear1"
        android:layout_height="match_parent">


    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>