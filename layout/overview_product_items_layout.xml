<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/overview_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/overview_product_image"
            android:scaleType="centerCrop"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/overview_product_name"/>

        <TextView
            android:id="@+id/overview_product_description"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:minLines="1"
            android:maxLines="3"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/overview_product_price"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:id="@+id/overview_product_like"
            android:layout_below="@id/overview_product_mrp"
            android:layout_marginBottom="10sp"
            android:layout_toRightOf="@id/overview_product_description"
            android:src="@drawable/heart_vector"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:id="@+id/overview_product_mrp"
            android:text="Mrp"
            android:layout_below="@id/overview_product_image"
            android:layout_marginLeft="30sp"
            android:layout_toRightOf="@id/overview_product_price"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:id="@+id/overview_product_discount"
            android:text="OFF"
            android:layout_below="@id/overview_product_image"
            android:layout_marginLeft="60sp"
            android:textAlignment="center"
            android:layout_marginTop="10sp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/overview_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:layout_marginStart="50sp"
            android:layout_toRightOf="@id/overview_product_discount"
            android:layout_marginTop="10dp"
            android:layout_below="@id/overview_product_image"
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>