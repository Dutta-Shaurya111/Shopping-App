<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitec"
    android:orientation="vertical"
    tools:context=".LoginSignup.loginpage">

    <ImageView
        android:layout_width="300sp"
        android:layout_height="100sp"
        android:id="@+id/app_logo"
        android:src="@drawable/applogo"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="45dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="15sp"
        android:hint="Enter Phone-Number:"
        android:id="@+id/phonenumber"
        android:textSize="20sp"
        android:inputType="phone"
        android:maxLength="10"
        android:background="@drawable/input_design"
        android:padding="15sp"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:id="@+id/password"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="15sp"
        android:hint="Enter Password:"
        android:inputType="textPassword"
        app:passwordToggleEnabled="true"
        android:textSize="20sp"
        android:background="@drawable/input_design"
        android:padding="15sp"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="15sp"
        android:weightSum="3"
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_marginTop="10sp">

<com.rey.material.widget.CheckBox
    android:layout_width="wrap_content"
    android:layout_height="45sp"
    android:id="@+id/checkbox1"
    android:layout_weight="1"
    android:text="Remember Me"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"/>

        <com.rey.material.widget.CheckBox
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:id="@+id/checkbox"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            android:text="Show Password"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:id="@+id/forgot_password"
            android:text="Forgot Password"
            android:layout_weight="1"
            android:layout_marginEnd="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="19sp"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn"
        android:text="Login"
        android:background="@drawable/buttons"
        android:textSize="20sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="50sp"
        android:textColor="@android:color/white"
        android:padding="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_otp_btn"
        android:text="Login Using Otp "
        android:background="@drawable/buttons"
        android:textSize="20sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="10sp"
        android:textColor="@android:color/white"
        android:padding="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:id="@+id/linear2"
        android:layout_marginEnd="15sp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:id="@+id/text_notadmin"
            android:visibility="invisible"
            android:text="I'm Not an Admin"
            android:textColor="@color/colorPrimary"
     android:layout_marginLeft="5sp"
            android:textSize="22sp"
            android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:id="@+id/text_admin"
        android:text="I'm an Admin?"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="85sp"
        android:textSize="20sp"
        android:textStyle="bold"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skip_login"
        android:layout_marginTop="10dp"
        android:text="Skip Login...."
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="85sp"
        android:textSize="25sp"
        android:textStyle="bold"/>
</LinearLayout></ScrollView>