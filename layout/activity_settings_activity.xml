<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/whitec"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firebase.settings_activity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:id="@+id/app_bar_settings"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_settings">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:id="@+id/close_settings"
                android:textColor="@color/whitec"
                android:textStyle="bold"
                android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:id="@+id/update_settings"
                    android:layout_marginLeft="240sp"
                    android:textColor="@color/whitec"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:id="@+id/settings_profile_image"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="18sp"
        android:src="@drawable/profile"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_profile_change"
        android:text="Change Profile"
        android:textStyle="bold"
        android:layout_marginLeft="140sp"
        android:layout_marginTop="10sp"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:id="@+id/settings_phone_number"
        android:layout_marginStart="20dp"
        android:paddingTop="2dp"
        android:maxLength="10"
        android:paddingBottom="2dp"
        android:background="@drawable/styling"
        android:layout_marginTop="20sp"
        android:padding="10sp"
        android:hint="Phone Number..."/>

    <EditText
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:background="@drawable/styling"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginStart="20dp"
        android:id="@+id/setting_full_name"
        android:layout_marginTop="20sp"
        android:padding="10sp"
        android:hint="Full Name..."/>

    <EditText
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:background="@drawable/styling"
        android:id="@+id/settings_address"
        android:paddingTop="2dp"
        android:minLines="3"
        android:paddingBottom="2dp"
        android:maxLines="10"
        android:layout_marginStart="20dp"
        android:padding="10sp"
        android:layout_marginTop="20sp"
        android:hint="Address..."/>

    <Button
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="20dp"
        android:textColor="@color/whitec"
        android:layout_marginStart="20dp"
        android:id="@+id/security_questions_btn"
        android:layout_marginTop="120sp"
        android:padding="10sp"
        android:text="Set Security Questions"/>

</LinearLayout>